  <script src="https://cdnjs.cloudflare.com/ajax/libs/d3/4.6.0/d3.min.js"></script>
  <script src='https://d3js.org/d3.v5.min.js'></script>
  <script>
    var diffCO2sources = ["trade_co2", "coal_co2", "gas_co2", "oil_co2", "methane", "nitrous_oxide"];
    async function init() {

      var dataset = d3.csv("https://unnatihasija1.github.io/GHGEmissionsData.csv").then(function (data) {
        var year = '2010';
        dataglobal = data;
        if (selectedYear = ' ') {
          selectedYear = year;
        }
        previousYear = selectedYear;
        firstCall = true;
        drawBar(data, selectedYear);

      });



      function drawBar(data, selectedYear) {

        //define countriesdropdown data for creating an array that contains values of all the required CO2s for all countries for a given year.
        //this should be called only when the year has changed through slider

        var makeCountriesDropdown = function (data, selectedYear) {
          filtereddata = data.filter(function (e) { return (e.year == selectedYear) })
          var countriesDropDown = {};
          filtereddata.forEach(function (d) {
            var countries = d.country;
            countriesDropDown[countries] = [];
            diffCO2sources.forEach(function (field) {
              countriesDropDown[countries].push(+d[field]);
            });
          });
          // if (firstCall == false) {
          //     var allCountries = Object.keys(countriesDropDown);
          //     var initialData = countriesDropDown[allCountries[0]];
          //     updateBars(initialData);
          // }
          // if (firstCall == true) { 
          barchart(countriesDropDown);
          // }
        }
        //makeCountriesDropdown(data, selectedYear);
        //define barchart by defining the Axes, bars, etc.
        var barchart = function (countriesDropDown) {
          var margin = { top: 100, right: 50, bottom: 100, left: 50 },
            width = 550 - margin.left - margin.right,
            height = 550 - margin.top - margin.bottom;

          tooltip = d3.select("svg")
            .data(countriesDropDown)
            .enter()
            .append("div")
            .style("opacity", 0)
            .attr("class", "tooltip")
            .style("background-color", "lightblue")
            .style("border", "solid")
            .style("border-width", "1px")
            .style("border-radius", "5px")
            .style("padding", "10px")
            .style("position", "absolute")
            .style("width", "auto")
            .style("height", "auto")

          mouseover = function (countriesDropDown) {
            d3.select(this).transition()
              .duration('200')
              .attr("fill", "red");
            tooltip
              .html("Emissions:" + countriesDropDown + "<br>  Year:" + selectedYear)
              .style("left", (d3.event.pageX) + "px")
              .style("top", (d3.event.pageY) + "px")
              .style("left", (d3.mouse(this)[0] + 250) + "px") // It is important to put the +90: other wise the tooltip is exactly where the point is an it creates a weird effect
              .style("top", (d3.mouse(this)[1] + 230) + "px")
              .style("opacity", 1)
          }
          mouseleave = function (selected_year_data) {
            d3.select(this).transition()
              .duration('200')
              .attr("fill", "coral");
            tooltip
              .transition()
              .duration(200)
              .style("opacity", 0)
          }

          if (firstCall == false) {
            var allCountries = Object.keys(countriesDropDown);
            var initialData = countriesDropDown[allCountries[0]];
            updateBars(initialData);
          }
          else {
            // Make x scale
            xScale = d3.scaleBand()
              .domain(diffCO2sources)
              .range([0, width], 0.1);

            // Make y scale, the domain will be defined on bar update
            yScale = d3.scaleLinear()
              .range([height, 0]);

            // Create canvas
            canvas = d3.select("svg")
              // .append("svg")
              // .attr("width",  width  + margin.left + margin.right)
              // .attr("height", height + margin.top  + margin.bottom)
              .attr("class", "barchart")
              .append("g")
              .attr("transform", "translate(100,100)");

            // Make x-axis and add to canvas
            xAxis = d3.axisBottom(xScale).tickFormat(function (d) { return d.x; });

            xAxisHandle = canvas.append("g")
              .attr("class", "x axis")
              .attr("transform", "translate(0," + height + ")")
              .call(xAxis);
            xAxisHandle.append("text")
              .attr("transform", "rotate(-90)")
              .attr("y", 6)
              .attr("dy", "1em")
              .style("text-anchor", "left")
              .text("Value")
            //.text(["trade_co2", "coal_co2", "gas_co2", "oil_co2", "methane", "nitrous_oxide"]);
            // Make y-axis and add to canvas
            yAxis = d3.axisLeft(yScale);


            yAxisHandleForUpdate = canvas.append("g")
              .attr("class", "y axis")
              .call(yAxis);


            yAxisHandleForUpdate.append("text")
              .attr("transform", "rotate(-90)")
              .attr("y", 6)
              .attr("dy", ".71em")
              .style("text-anchor", "end")
              .text("Value");

            d3.select("svg")
              .append("g")
              .append("text")
              .attr("y", 490)
              .attr("x", -135)
              .attr("transform", "rotate(-30)")
              .attr("font-size", "15px")
              .attr("text-anchor", "middle")
              .text("Trade CO2");

            d3.select("svg")
              .append("g")
              .append("text")
              .attr("y", 520)
              .attr("x", -70)
              .attr("transform", "rotate(-30)")
              .attr("font-size", "15px")
              .attr("text-anchor", "middle")
              .text("Coal CO2");

            d3.select("svg")
              .append("g")
              .append("text")
              .attr("y", 550)
              .attr("x", -5)
              .attr("transform", "rotate(-30)")
              .attr("font-size", "15px")
              .attr("text-anchor", "middle")
              .text("Gas CO2");

            d3.select("svg")
              .append("g")
              .append("text")
              .attr("y", 580)
              .attr("x", 60)
              .attr("transform", "rotate(-30)")
              .attr("font-size", "15px")
              .attr("text-anchor", "middle")
              .text("Oil CO2");


            d3.select("svg")
              .append("g")
              .append("text")
              .attr("y", 620)
              .attr("x", 125)
              .attr("transform", "rotate(-30)")
              .attr("font-size", "15px")
              .attr("text-anchor", "middle")
              .text("Methane");

            d3.select("svg")
              .append("g")
              .append("text")
              .attr("y", 665)
              .attr("x", 190)
              .attr("transform", "rotate(-30)")
              .attr("font-size", "15px")
              .attr("text-anchor", "middle")
              .text("Nitrous Oxide");

            d3.select("svg")
              .append("g")
              .append("text")
              .attr("transform", "rotate(-90)")
              .attr("y", 50)
              .attr("x", -300)
              .attr("font-size", "15px")
              .attr("text-anchor", "middle")
              .text("Emission values in tons")
            // d3.selectAll("rect").data(clearAll).exit().remove()
            // d3.selectAll("xAxis").data(clearAll).exit().remove()
            // d3.selectAll("yAxisHandleForUpdate").data(clearAll).exit().remove()
          }
          updateBars = function (data) {
            // First update the y-axis domain to match data
            //yAxisHandleForUpdate.exit
            var color = d3.scaleOrdinal(d3.schemeCategory10)
            yScale.domain(d3.extent(data));
            yAxisHandleForUpdate.call(yAxis);


            var bars = canvas.selectAll(".bar").data(data);
            //bars.exit().remove();
            bars.enter()
              .append("rect")
              .attr("class", "bar")
              .attr("x", function (d, i) { return xScale(diffCO2sources[i]); })
              .attr("width", xScale.bandwidth())
              .attr("fill", "coral")
              .attr("y", function (d, i) { return yScale(d); })
              .attr("height", function (d, i) { return height - yScale(d); })
              .on("mouseover", mouseover)
              // .on("mouseover", function () {
              //   d3.select(this).attr("fill", "blue");
              // })
              .on("mouseout", function (d, i) {
                d3.select(this).attr("fill", "coral");
              })
            //.on("mouseleave", mouseleave);

            // Update old ones, already have x / width from before
            bars
              .transition().duration(800)
              .attr("y", function (d, i) { return yScale(d); })
              .attr("height", function (d, i) { return height - yScale(d); });

            // Remove old ones
            clearAll = [];
            bars.exit().remove();

          };

          // Handler for dropdown value change
          var dropdownChange = function () {
            var newcountries = d3.select(this).property('value'),
              newData = countriesDropDown[newcountries];

            updateBars(newData);
          };

          // Get names of countries1, for dropdown
          var countries1 = Object.keys(countriesDropDown).sort();

          if (firstCall == true) {

            var dropdown = d3.select("#scatter")
              .insert("select", "svg")
              .on("change", dropdownChange);

            dropdown.selectAll("option")
              .data(countries1)
              .enter().append("option")
              .attr("value", function (d) { return d; })
              // .attr("height", 50)
              // .attr("width", 100)
              .text(function (d) {
                return d[0].toUpperCase() + d.slice(1, d.length); // capitalize 1st letter

              });
          }
          var initialData = countriesDropDown[countries1[0]];
          updateBars(initialData);


          /// slider part
          if (firstCall == true) {
            var formatDateIntoYear = d3.timeFormat("%Y");
            var formatDate = d3.timeFormat("%b %Y");
            var parseDate = d3.timeParse("%m/%d/%y");

            var startDate = new Date("2010-01-01"),
              endDate = new Date("2020-01-01");


            var svg = d3.select("svg");
            ////////// slider //////////

            var moving = false;
            var currentValue = 0;
            var targetValue = 650;

            //var playButton = d3.select("#play-button");

            var xT = d3.scaleTime()
              .domain([startDate, endDate])
              .range([0, targetValue])
              .clamp(true);

            var slider = svg.append("g")
              .attr("class", "slider")
              .attr("transform", "translate(50,550)");

            slider.append("line")
              .attr("class", "track")
              .attr("x1", xT.range()[0])
              .attr("x2", xT.range()[1])
              .select(function () { return this.parentNode.appendChild(this.cloneNode(true)); })
              .attr("class", "track-inset")
              .select(function () { return this.parentNode.appendChild(this.cloneNode(true)); })
              .attr("class", "track-overlay")
              .call(d3.drag()
                .on("start.interrupt", function () { slider.interrupt(); })
                .on("start drag", function () {
                  currentValue = d3.event.x;
                  update(xT.invert(currentValue));
                })
              );

            slider.insert("g", ".track-overlay")
              .attr("class", "ticks")
              .attr("transform", "translate(0," + 18 + ")")
              .selectAll("text")
              .data(xT.ticks(10))
              .enter()
              .append("text")
              .attr("x", xT)
              .attr("y", 10)
              .attr("text-anchor", "middle")
              .text(function (f) { return formatDateIntoYear(f); });

            var handle = slider.insert("circle", ".track-overlay")
              .attr("class", "handle")
              .attr("r", 9);

            var label = slider.append("text")
              .attr("class", "label")
              .attr("text-anchor", "middle")
              .text(formatDate(startDate))
              .attr("transform", "translate(0," + (-25) + ")")
          }
          function update(h) {
            // update position and text of label according to slider scale
            handle.attr("cx", xT(h));
            label
              .attr("x", xT(h))
              .text(formatDate(h));

            // filter data set and redraw plot
            //var newData = data.filter(function(data) {return (d.year==formatDateIntoYear(h))});
            selectedYear = formatDateIntoYear(h)
            firstCall = false
            if (previousYear == selectedYear) {
              var initialData = countriesDropDown[countries1[0]];
              updateBars(initialData);
            }
            else {
              makeCountriesDropdown(dataglobal, selectedYear);
            }

          }
        }
        makeCountriesDropdown(data, selectedYear);
      }
    }

  </script>
</body>

